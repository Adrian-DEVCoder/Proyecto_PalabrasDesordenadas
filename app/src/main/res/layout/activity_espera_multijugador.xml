<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    tools:context=".EsperaMultijugadorActivity">

    <ProgressBar
        android:id="@+id/pg_espera"
        style="?android:attr/progressBarStyle"
        android:layout_width="89dp"
        android:layout_height="84dp"
        android:layout_marginTop="212dp"
        android:foregroundTint="#FFFFFF"
        android:progressTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_esperando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Esperando a otro jugador..."
        android:textColor="#EFB810"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4A2192"
        android:text="CANCELAR"
        android:textColor="#EFB810"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_esperando"
        app:layout_constraintVertical_bias="0.259"
        app:strokeColor="#EFB810"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>